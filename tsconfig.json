{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module Resolution */
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@middleware/*": ["middleware/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    },

    /* Do NOT override typeRoots unless you have a good reason */
    // "typeRoots": ["node_modules/@types"],  ‚ùå remove this line

    /* Compatibility & Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
